<!DOCTYPE html>
<html lang="en">
<head>
    <title>Acrylic</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide|Sofia|Trirong">
    <link rel="stylesheet" href="../../style.css">
</head>
<body>

<div class="navbar">


    <div class="logo">
        <img src="logo.png" alt="logo">
    </div>
    <a href="/about" onclick="showContent('about')">About</a>

    <div class="dropdown">
        <a href="/art">Arts</a>
        <div class="submenu">
            <a href="/portraits" onclick="arts_menu('portraits')">Pencil portraits</a>
            <a href="/acrylic" onclick="arts_menu('acrylic')">Acrylic paintings</a>
            <a href="/watercolor" onclick="arts_menu('watercolor')">Watercolor paintings</a>
            <a href="/draw" onclick="arts_menu('draw')">Drawings</a>
            <a href="/random_draw" onclick="arts_menu('random_draw')">Random drawings</a>
        </div>
    </div>
    <div class="dropdown">
        <a href="/artists">Artists</a>
        <div class="submenu">
            <a href="/bia" onclick="artist_menu('Husu Bianca')">Artist 1</a>
            <a href="/georgi" onclick="artist_menu('Sanda Georgiana')">Artist 2</a>
            <a href="/marian" onclick="artist_menu('Garbacea Marian')">Artist 3</a>
        </div>

    </div>
    <a href="/reacts" onclick="showContent('reacts')">Reacts</a>
    <a href="/ai_art" onclick="showContent('ai')">AI Art</a>
    <div class="dropdown">
        <a href="#">Account</a>
        <div class="submenu">
            <a href="#" onclick="redirectToLogin()">Log in</a>
            <a href="#" onclick="account_menu('sing_in')">Sign in</a>
            <a href="#" onclick="account_menu('condition')">Conditions</a>

        </div>

    </div>
</div>

<h1 id="pageTitle">Acrylic</h1>

<div class="cart" onclick="showCart()">Cart (<span id="cart_count">0</span>)</div>

<div class="product-container">
    <% lucrari.forEach(function(lucrare) { %>
        <div class="product">
            <img src="/images/<%= lucrare.locatie %>" alt="Pictură acrilică">
            <h3><%- lucrare.descriere %></h3>
            <p class="price"><%- lucrare.pret %> RON</p>

            <form action="/add-to-cart" method="POST">
                <input type="hidden" name="productId" value="<%= lucrare.id_art %>">
                <button type="submit">Add to Cart</button>
            </form>
        </div>
</div>


<a href="/cart">Go to Cart</a>
</div>
<% }); %>
</div>

<script src="script.js"></script>

</body>
</html>